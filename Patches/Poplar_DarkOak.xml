<Patch>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Plant_TreePoplar"]/label</xpath>
    <value>
      <label>dark oak tree</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Plant_TreePoplar"]/graphicData</xpath>
    <value>
      <graphicData>
        <texPath>Blocky/Trees/DarkOak</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <shadowData>
          <volume>(0.2, 0.35, 0.13)</volume>
          <offset>(-0.03,0,-0.44)</offset>
        </shadowData>
      </graphicData>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Plant_TreePoplar"]/plant</xpath>
    <value>
      <immatureGraphicPath>Blocky/Trees/DarkOak_Immature</immatureGraphicPath>
      <choppedThingDef>BlockyTrees_ChoppedStump_Poplar</choppedThingDef>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Plant_TreePoplar"]/plant/leaflessGraphicPath</xpath>
    <value>
      <leaflessGraphicPath>Blocky/Trees/DarkOak_Leafless</leaflessGraphicPath>
    </value>
  </Operation>
</Patch>
