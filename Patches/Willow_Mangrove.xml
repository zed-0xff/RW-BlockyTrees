<Patch>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Plant_TreeWillow"]/label</xpath>
    <value>
      <label>mangrove tree</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Plant_TreeWillow"]/graphicData</xpath>
    <value>
      <graphicData>
        <texPath>Blocky/Trees/Mangrove</texPath>
        <graphicClass>Graphic_Random</graphicClass>
        <shadowData>
          <volume>(0.2, 0.35, 0.13)</volume>
          <offset>(-0.03,0,-0.44)</offset>
        </shadowData>
      </graphicData>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Plant_TreeWillow"]/plant</xpath>
    <value>
      <immatureGraphicPath>Blocky/Trees/Mangrove_Immature</immatureGraphicPath>
      <choppedThingDef>BlockyTrees_ChoppedStump_Willow</choppedThingDef>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Plant_TreeWillow"]/plant/leaflessGraphicPath</xpath>
    <value>
      <leaflessGraphicPath>Blocky/Trees/Mangrove_Leafless</leaflessGraphicPath>
    </value>
  </Operation>
</Patch>
