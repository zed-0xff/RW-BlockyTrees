<Patch>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Plant_TreeOak"]/graphicData</xpath>
    <value>
      <graphicData>
        <texPath>Blocky/Trees/Oak</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <shadowData>
          <volume>(0.2, 0.35, 0.13)</volume>
          <offset>(-0.03,0,-0.44)</offset>
        </shadowData>
      </graphicData>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Plant_TreeOak"]/plant</xpath>
    <value>
      <immatureGraphicPath>Blocky/Trees/Oak_Immature</immatureGraphicPath>
      <choppedThingDef>BlockyTrees_ChoppedStump_Oak</choppedThingDef>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Plant_TreeOak"]/plant/leaflessGraphicPath</xpath>
    <value>
      <leaflessGraphicPath>Blocky/Trees/Oak_Leafless</leaflessGraphicPath>
    </value>
  </Operation>
</Patch>
